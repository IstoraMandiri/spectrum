    "promise-map-series": "^0.2.3",
    "qrcode.react": "^0.7.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-dropzone": "^3.13.3",
    "react-hot-loader": "^3.0.0-beta.6",
    "react-qr-reader": "^1.1.3",
    "react-redux": "^5.0.5",
    "react-router": "^4.1.1",
    "react-router-dom": "^4.1.1",
    "redux": "^3.7.1",
    "redux-orm": "^0.9.3",
