{
  "name": "spectrum-lightsuite",
  "version": "0.0.1",
  "description": "Full Gamut Ethereum Lightsuite",
  "author": "Chris Hitchcott <hitchcott@gmail.com> (http://hitchcott.com)",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spectrum/spectrum.git"
  },
  "scripts": {
    "test": "npm run build; npm run test:jest; npm run serve:pm2; npm run test:cucumber; npm run serve:stop-pm2;",
    "test:ci": "npm run test:jest:coverage; npm run test:cucumber:ci",
    "test:jest": "jest",
    "test:jest:coverage": "jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "test:watch": "jest --watchAll",
    "test:cucumber": "./node_modules/.bin/wdio wdio.development.config.js",
    "test:cucumber:ci": "./node_modules/.bin/wdio wdio.ci.config.js",
    "start": "webpack-dev-server --progress",
    "stats": "rm -rf ./docs; STATS=true NODE_ENV=production webpack --progress --profile; webpack-bundle-analyzer stats.json ./docs",
    "build": "rm -rf ./docs; NODE_ENV=production webpack --progress",
    "build:ci": "rm -rf ./docs; NODE_ENV=production webpack",
    "serve": "./node_modules/.bin/http-server ./docs",
    "serve:pm2": "./node_modules/.bin/pm2 start ./node_modules/.bin/http-server --name spectrum-test-server -- ./docs",
    "serve:stop-pm2": "./node_modules/.bin/pm2 stop spectrum-test-server",
    "lint": "eslint './src/**/*.{js,jsx}'"
  },
  "jest": {
    "transformIgnorePatterns": [
      "/node_modules/(?!(web3-redux|@digix/redux-crypto-prices)).+\\.js$"
    ],
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/test/__mocks__/styleMock.js",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/test/__mocks__/fileMock.js",
      "^@digix/spectrum/src/(.*)": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ]
  },
  "files": [
    "src",
    ".eslint",
    ".babelrc",
    ".gitignore"
  ],
  "dependencies": {
    "@digix/etc-redemption": "0.0.11",
    "@digix/react-ledger-container": "0.0.6",
    "@digix/redux-crypto-prices": "0.0.1",
    "@digix/truffle-gnosis-multisig": "0.0.2",
    "babel-polyfill": "^6.23.0",
    "bignumber.js": "^4.0.2",
    "blockies": "0.0.2",
    "es6-deferred": "^1.3.0",
    "ethereumjs-tx": "^1.3.1",
